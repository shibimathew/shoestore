<style>
    .navbar-aside {
        width: 280px;
        height: 100%;
        position: fixed;
        top: 0;
        left: 0;
        background: #fff;
        z-index: 1000;
        transition: transform 0.3s ease;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    .main-wrap {
        margin-left: 280px;
        transition: all 0.3s ease;
    }
    .screen-overlay {
        width: 100%;
        height: 100%;
        z-index: 999;
        position: fixed;
        top: 0;
        left: 0;
        background: rgba(0,0,0,0.5);
        display: none;
        opacity: 0;
        transition: opacity 0.3s;
    }
    .screen-overlay.active {
        display: block;
        opacity: 1;
    }
    .hamburger-btn {
        display: none;
        position: fixed;
        right: 18px;
        top: 7px;
        z-index: 1100;
        background: #fff;
        border: none;
        border-radius: 6px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        padding: 10px 12px;
        cursor: pointer;
    }
    .hamburger-btn .bar {
        display: block;
        width: 24px;
        height: 3px;
        margin: 4px 0;
        background: #333;
        border-radius: 2px;
        transition: all 0.3s;
    }
    @media (max-width: 991px) {
        .navbar-aside {
            transform: translateX(-100%);
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
        }
        .navbar-aside.show {
            transform: translateX(0);
        }
        .main-wrap {
            margin-left: 0;
        }
        .hamburger-btn {
            display: block;
        }
        .main-wrap.dimmed {
            filter: blur(2px) grayscale(0.2) brightness(0.95);
            pointer-events: none;
            user-select: none;
        }
    }
     @media (max-width: 576px) {
            .navbar-aside {
                width: 280px;
            }
            
            .mobile-logo img {
                height: 28px;
            }
            
            .pagination-area {
