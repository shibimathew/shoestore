<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Shoestore Dashboard</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="assets2/imgs/theme/favicon.svg">
    <!-- Template CSS -->
    <link href="/assets2/css/main.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <main>
        <header class="main-header style-2 navbar">
            <div class="col-brand">
                <a href="index.html" class="brand-wrap">
                    <img src="/assets/imgs/theme/shoestore-logo.svg" class="logo" alt="Shoestore Dashboard">
                </a>
            </div>
        </header>

        <section class="content-main mt-80 mb-80">
            <div class="card mx-auto card-login">
                <div class="card-body text-center">
                    <img src="/assets/imgs/theme/shoestore-logo.svg" alt="Shoestore Logo" class="mb-4" style="max-width: 150px;">
                    <h4 class="card-title mb-4">Sign in</h4>
                    <form action="/admin/login" method="POST">
                        <div class="mb-3">
                            <input name="email" class="form-control" placeholder="Username or email" type="text">
                        </div>
                        <div class="mb-3">
                            <input name="password" class="form-control" placeholder="Password" type="password">
                            <div id="error2" class="error-message"></div>
                        </div>
                        <%if(locals.message && message.length>0){%>
                            <div class="alert alert-danger text-center">
                                <%=message%>
                            </div>
                        <%}%>
                        <div class="mb-3 text-start">
                            <label class="form-check">
                                <input type="checkbox" class="form-check-input" checked="">
                                <span class="form-check-label">Remember</span>
                            </label>
                        </div>
                        <div class="mb-4">
                            <button type="submit" class="btn btn-primary w-100"> Login </button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>

    <script src="assets2/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assets2/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="assets2/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="assets2/js/main.js" type="text/javascript"></script>
</body>

</html>
