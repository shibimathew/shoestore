                    // Alternate Phone (optional, but must be valid if present)
                    const altPhone = document.getElementById('altPhone');
                    if (altPhone.value && altPhone.value.trim() && !/^[6-9]\d{9}$/.test(altPhone.value.trim())) {
                        showError('altPhone', 'Enter valid 10-digit Alternative mobile number.');
                        isValid = false;
                    }

                    // Address Line 1
                    const addressLine1 = document.getElementById('addressLine1');
                    if (!addressLine1.value.trim()) {
                        showError('addressLine1', 'Address Line 1 is required.');
                        isValid = false;
                    }

                    // City
                    const city = document.getElementById('city');
                    if (!city.value.trim()) {
                        showError('city', 'City is required.');
                        isValid = false;
                    }

                    // State (must select)
                    const state = document.getElementById('state');
                    if (!state.value) {
                        showError('state', 'Please select a state.');
                        isValid = false;
                    }

                    // Pincode (Indian 6-digit)
                    const pincode = document.getElementById('pincode');
                    if (!pincode.value.trim()) {
                        showError('pincode', 'Postal Code is required.');
                        isValid = false;
                    } else if (!/^\d{6}$/.test(pincode.value.trim())) {
                        showError('pincode', 'Enter a valid 6-digit Postal Code.');
                        isValid = false;
                    }

                    // Address Type (radio group, at least one checked)
                    const addressTypeInputs = form.querySelectorAll('input[name="addressType"]');
                    let addressTypeChecked = false;
                    addressTypeInputs.forEach(input => {
                        if (input.checked) addressTypeChecked = true;
                    });
                    if (!addressTypeChecked) {
                        const addressTypeSelector = document.querySelector('.address-type-selector');
                        const errorElement = document.getElementById('addressTypeError');
                        if (addressTypeSelector && errorElement) {
                            addressTypeSelector.classList.add('is-invalid');
                            errorElement.textContent = 'Select address type.';
                            errorElement.classList.add('show');
                        }
