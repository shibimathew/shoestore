                            } else if (!/^[6-9]\d{9}$/.test(field.value.trim())) {
                                showError('phone', 'Enter valid 10-digit Indian mobile number.');
                            }
                            break;
                        case 'altPhone':
                            if (field.value && field.value.trim() && !/^[6-9]\d{9}$/.test(field.value.trim())) {
                                showError('altPhone', 'Enter valid 10-digit Alternative mobile number.');
                            }
                            break;
                        case 'addressLine1':
