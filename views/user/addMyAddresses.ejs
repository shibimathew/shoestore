                            }
                            break;
                        case 'city':
                            if (!field.value.trim()) {
                                showError('city', 'City is required.');
                            }
                            break;
                        case 'pincode':
                            if (!field.value.trim()) {
                                showError('pincode', 'Postal Code is required.');
                            } else if (!/^\d{6}$/.test(field.value.trim())) {
                                showError('pincode', 'Enter a valid 6-digit Postal Code.');
                            }
                            break;
                    }
