        <script>

            document.addEventListener('DOMContentLoaded', function () {
                const form = document.getElementById('addressForm');

                function validateForm() {
                    let errors = [];

                    // Full Name
                    const name = form.elements['name'];
                    if (!name.value.trim()) {
                        errors.push('Full Name is required.');
                    }

                    // Phone Number (Indian 10-digit mobile)
                    const phone = form.elements['phone'];
                    if (!phone.value.trim()) {
                        errors.push('Phone Number is required.');
                    } else if (!/^[6-9]\d{9}$/.test(phone.value.trim())) {
                        errors.push('Enter valid 10-digit Indian mobile number.');
                    }

                    // Alternate Phone (optional, but must be valid if present)
                    const altPhone = form.elements['altPhone'];
                    if (altPhone.value && altPhone.value.trim() && !/^[6-9]\d{9}$/.test(altPhone.value.trim())) {
                        errors.push('Enter valid 10-digit Alternative mobile number.');
                    }

                    // Address Line 1
                    const add1 = form.elements['addressLine1'];
                    if (!add1.value.trim()) {
                        errors.push('Address Line 1 is required.');
                    }

                    // City
                    const city = form.elements['city'];
                    if (!city.value.trim()) {
                        errors.push('City is required.');
                    }

                    // State (must select)
                    const state = form.elements['state'];
                    if (!state.value) {
                        errors.push('Please select a state.');
                    }

                    // Pincode (Indian 6-digit)
                    const pincode = form.elements['pincode'];
                    if (!pincode.value.trim()) {
                        errors.push('Postal Code is required.');
                    } else if (!/^\d{6}$/.test(pincode.value.trim())) {
                        errors.push('Enter a valid 6-digit Postal Code.');
                    }

                    // Address Type (radio group, at least one checked)
                    const addressTypeInputs = form.querySelectorAll('input[name="addressType"]');
                    let addressTypeChecked = false;
                    addressTypeInputs.forEach(input => {
                        if (input.checked) addressTypeChecked = true;
                    });
                    if (!addressTypeChecked) {
                        errors.push('Select address type.');
                    }

                    return errors;
                }

                form.addEventListener('submit', async function (e) {
                    e.preventDefault(); // Always prevent default first

                    // Run validation and collect errors
                    let errorMessages = validateForm();
                    if (errorMessages.length > 0) {
                        if (typeof Swal !== 'undefined') {
                            Swal.fire({
                                icon: "error",
                                title: "Validation Error",
                                html: errorMessages.join('<br>'),
                                timer: 2000,
                                showConfirmButton: false,
                            });
                        } else {
                            alert(errorMessages.join('\n'));
                        }
                        return; // Don't proceed with fetch
                    }

                    const name = document.getElementById('name').value;
                    const phone = document.getElementById('phone').value;
                    const altPhone = document.getElementById('altPhone').value;
                    const landmark = document.getElementById('landmark').value;
                    const addressLine1 = document.getElementById('addressLine1').value;
                    const addressLine2 = document.getElementById('addressLine2').value;
                    const city = document.getElementById('city').value;
                    const state = document.getElementById('state').value;
                    const pincode = document.getElementById('pincode').value;
                    const addressType = document.querySelector('input[name="addressType"]:checked').value;
                    const defaultAddress = document.getElementById('defaultAddress').checked;
                    const redirect = document.getElementById('redirect').value;


                    const formData = { name, phone, altPhone, landmark, addressLine1, addressLine2, city, state, pincode, addressType, defaultAddress, redirect };
                    // Show loading state
                    const submitButton = form.querySelector('button[type="submit"]');
                    const originalText = submitButton.textContent;
                    submitButton.textContent = 'Saving...';
                    submitButton.disabled = true;

                    try {
                        const response = await fetch('/addAddresses', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(formData)
                        });

                        const data = await response.json();
                        if (response.ok && data.success) {
                            if (typeof Swal !== 'undefined') {
                                Swal.fire({
                                    icon: "success",
                                    title: "Success!",
                                    text: data.message || "Address added successfully!",
                                    timer: 1500,
                                    showConfirmButton: false
                                }).then(() => {
                                    if (data.redirect) {
                                        window.location.href = data.redirect;
                                    } else {
                                        window.location.href = '/myAddresses';
                                    }
                                });
                            } else {
                                alert(data.message || "Address added successfully!");
                                window.location.href = '/myAddresses';
                            }
                        } else if (!data.success) {
                            Swal.fire({
                                icon: "warning",
                                title: "Error!",
                                text: data.message || "Failed to add address",
                                timer: 3000,
                                showConfirmButton: true
                            });
                        } else {
                            Swal.fire({
                                icon: 'warning',
                                text: data.message || "Something went wrong",
                                timer: 3000
                            })
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        if (typeof Swal !== 'undefined') {
                            Swal.fire({
                                icon: "warning",
                                title: "Error!",
                                text: "An error occurred while submitting the form.",
                                timer: 3000,
                                showConfirmButton: true
                            });
                        } else {
                            alert("An error occurred while submitting the form.");
                        }
                    } finally {
                        submitButton.textContent = originalText;
                        submitButton.disabled = false;
                    }
                });

                // Remove the old addressType error removal,
                // but you may keep other input-related feedback features if desired
            });

