<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/" rel="nofollow">Home</a>
                <span></span> <a href="/addresses">My Addresses</a>
                <span></span> Add New Address
            </div>
        </div>
    </div>

    <section class="mt-50 mb-50">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="dashboard-menu">
                        <ul class="nav flex-column" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link" href="/profileinfo">
                                    <i class="fi-rs-user-check"></i> Personal Information
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/myorders">
                                    <i class="fi-rs-shopping-cart"></i> My Orders
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="/addresses">
                                    <i class="fi-rs-marker"></i> My Addresses
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/wishlist">
                                    <i class="fi-rs-heart"></i> Wishlist
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/wallet">
                                    <i class="fi-rs-credit-card"></i> My Wallet
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/notifications">
                                    <i class="fi-rs-bell"></i> Notifications
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/security">
                                    <i class="fi-rs-shield-check"></i> Security Settings
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/logout">
                                    <i class="fi-rs-exit"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h3 class="mb-0">Edit Address</h3>
                        </div>
                        <div class="card-body">
                            <form action="/save-address/<%= detailId %>" method="POST">
                                <!-- (optional) hidden copy of the subdoc _id if you ever need it in req.body -->
                                <input type="hidden" name="details[0][_id]" value="<%= detailId %>">
                          
                                <div class="row">
                                  <div class="col-md-6">
                                    <label for="name" class="form-label">Full Name</label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      id="name"
                                      name="details[0][name]"
                                      value="<%= address.name %>"
                                      required
                                    >
                                  </div>
                                  <div class="col-md-6">
                                    <label for="phone" class="form-label">Phone Number</label>
                                    <input
                                      type="tel"
                                      class="form-control"
                                      id="phone"
                                      name="details[0][phone]"
                                      value="<%= address.phone %>"
                                      required
                                    >
                                  </div>
                                </div>
                          
                                <div class="row mt-3">
                                  <div class="col-md-6">
                                    <label for="altPhone" class="form-label">Alternative Phone (Optional)</label>
                                    <input
                                      type="tel"
                                      class="form-control"
                                      id="altPhone"
                                      name="details[0][altPhone]"
                                      value="<%= address.altPhone %>"
                                    >
                                  </div>
                                  <div class="col-md-6">
                                    <label for="landmark" class="form-label">Landmark (Optional)</label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      id="landmark"
                                      name="details[0][landmark]"
                                      value="<%= address.landmark %>"
                                    >
                                  </div>
                                </div>
                          
                                <div class="mt-3">
                                  <label for="addressLine1" class="form-label">Address Line 1</label>
                                  <input
                                    type="text"
                                    class="form-control"
                                    id="addressLine1"
                                    name="details[0][addressLine1]"
                                    value="<%= address.addressLine1 %>"
                                    required
                                  >
                                </div>
                                <div class="mt-3">
                                  <label for="addressLine2" class="form-label">Address Line 2 (Optional)</label>
                                  <input
                                    type="text"
                                    class="form-control"
                                    id="addressLine2"
                                    name="details[0][addressLine2]"
                                    value="<%= address.addressLine2 %>"
                                  >
                                </div>
                          
                                <div class="row mt-3">
                                  <div class="col-md-6">
                                    <label for="city" class="form-label">City</label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      id="city"
                                      name="details[0][city]"
                                      value="<%= address.city %>"
                                      required
                                    >
                                  </div>
                                  <div class="col-md-6">
                                    <label for="state" class="form-label">State</label>
                                    <select
                                      class="form-select"
                                      id="state"
                                      name="details[0][state]"
                                      required
                                    >
                                      <option value="">Select State</option>
                                      <% [
                                          "Andhra Pradesh","Arunachal Pradesh","Assam","Bihar","Chhattisgarh",
                                          "Goa","Gujarat","Haryana","Himachal Pradesh","Jharkhand",
                                          "Karnataka","Kerala","Madhya Pradesh","Maharashtra","Manipur",
                                          "Meghalaya","Mizoram","Nagaland","Odisha","Punjab",
                                          "Rajasthan","Sikkim","Tamil Nadu","Telangana","Tripura",
                                          "Uttar Pradesh","Uttarakhand","West Bengal",
                                          "Andaman and Nicobar Islands","Chandigarh",
                                          "Dadra and Nagar Haveli and Daman and Diu","Delhi",
                                          "Jammu and Kashmir","Ladakh","Lakshadweep","Puducherry"
                                        ].forEach(stateName => { %>
                                        <option
                                          value="<%= stateName %>"
                                          <%= address.state === stateName ? 'selected' : '' %>
                                        ><%= stateName %></option>
                                      <% }) %>
                                    </select>
                                  </div>
                                </div>
                          
                                <div class="row mt-3">
                                  <div class="col-md-6">
                                    <label for="pincode" class="form-label">Postal Code</label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      id="pincode"
                                      name="details[0][pincode]"
                                      value="<%= address.pincode %>"
                                      required
                                    >
                                  </div>
                                </div>
                          
                                <div class="address-type-selector mt-3">
                                  <label class="form-label">Address Type</label>
                                  <div class="mt-2 form-check">
                                    <input
                                      type="radio"
                                      class="form-check-input"
                                      name="details[0][addressType]"
                                      id="addressTypeHome"
                                      value="Home"
                                      <%= address.addressType === 'Home' ? 'checked' : '' %>
                                    >
                                    <label for="addressTypeHome" class="form-check-label">Home</label>
                                  </div>
                                  <div class="form-check">
                                    <input
                                      type="radio"
                                      class="form-check-input"
                                      name="details[0][addressType]"
                                      id="addressTypeOffice"
                                      value="Office"
                                      <%= address.addressType === 'Office' ? 'checked' : '' %>
                                    >
                                    <label for="addressTypeOffice" class="form-check-label">Office</label>
                                  </div>
                                  <div class="form-check">
                                    <input
                                      type="radio"
                                      class="form-check-input"
                                      name="details[0][addressType]"
                                      id="addressTypeOther"
                                      value="Other"
                                      <%= address.addressType === 'Other' ? 'checked' : '' %>
                                    >
                                    <label for="addressTypeOther" class="form-check-label">Other</label>
                                  </div>
                                </div>
                          
                                <div class="default-address-toggle form-check mt-3">
                                  <input
                                    type="checkbox"
                                    class="form-check-input"
                                    id="defaultAddress"
                                    name="defaultAddress"
                                    <%= address.isDefault ? 'checked' : '' %>
                                  >
                                  <label for="defaultAddress" class="form-check-label">
                                    Set as default address
                                  </label>
                                </div>
                          
                                <div class="mt-4">
                                  <button type="submit" class="btn btn-fill-out">Save Address</button>
                                  <a href="/myAddresses" class="btn btn-outline-primary ms-2">Cancel</a>
                                </div>
                              </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

