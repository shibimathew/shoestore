                                    <i class="fi-rs-exit"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h3 class="mb-0">My Orders</h3>
                        </div>
                        <div class="card-body">
                            <!-- Sample Orders - In a real application, these would be dynamically generated -->
                            <% orders.forEach(order => { %>
                            <div class="order-card">
                                <div class="card-header">
                                    <div>
                                        <span class="order-id">Order <%= order.orderId %></span>
                                        <span class="order-date ms-2">Placed on: <%= order.createdAt.toLocaleDateString() %></span>
                                    </div>
                                    <span class="order-status 
                                        <%= order.status === 'Delivered' ? 'delivered' : '' %> 
                                        <%= order.status === 'Shipped' ? 'shipped' : '' %> 
                                        <%= order.status === 'Processing' ? 'processing' : '' %> 
                                        <%= order.status === 'Cancelled' ? 'cancelled' : '' %>">
                                        <%= order.status || 'Unknown' %>
                                    </span>
                                </div>
                                <div class="card-body">
                                    <div class="order-items">
                                        <!-- <div class="order-item">
                                            <img src="assets/imgs/shop/product-1.jpg" alt="Productytlkjkgtkjjku">
                                            <div class="order-item-details">
                                                <div class="order-item-name"><%= order.userId.name %></div>
                                                <div class="order-item-price">₹<%= order.totalAmount.toFixed(2) %></div>
                                                <div class="order-item-quantity">Quantity: 1</div>
                                            </div>
                                        </div> -->

                                        <% order.orderItems.forEach(item => { %>
                                        <div class="order-item">

    <img src="<%= item.productImage %>" alt="<%= item.product?.productName || 'Product' %>" onerror="this.src='/assets/imgs/shop/product-placeholder.jpg'" />
    <div class="order-item-details">
        <div class="order-item-name"><%= item.product?.productName || "Unnamed Product" %></div>
        <div class="order-item-price">₹<%= item.product?.salePrice || 0 %></div>
        <div class="order-item-size">Size: <%= item?.variant?.size?.toUpperCase?.() || 'N/A' %></div>
        <div class="order-item-quantity">Quantity: <%= item.quantity%></div>
    </div>
</div>

                                         
                                        <% }) %>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <div class="order-total">Total: ₹<%= order.totalAmount.toFixed(2) %></div>
                                        <div class="order-actions">
                                            <a href="/orderDetails/<%= order._id %>" class="btn btn-sm btn-outline-primary">View Details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%})%>

                            

                        </div>
                    </div>
                    <div class="pagination-area mt-15 mb-sm-5 mb-lg-0">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-start">
                                <% if (currentPage > 1) { %>
                                  <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>">
                                      <i class="fi-rs-angle-double-small-left"></i>
                                    </a>
                                  </li>
                                <% } %>
                              
                                <% for (let i = 1; i <= totalPages; i++) { %>
                                  <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= ('0' + i).slice(-2) %></a>
                                  </li>
                                <% } %>
                              
                                <% if (currentPage < totalPages) { %>
                                  <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>">
                                      <i class="fi-rs-angle-double-small-right"></i>
                                    </a>
                                  </li>
                                <% } %>
                              </ul>
                              
                        </nav>
                    </div>
                </div>
                
            </div>
        </div>
    </section>
</main>

