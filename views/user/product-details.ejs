    <script>
        // Dynamic stock update based on selected size
        // 
        document.addEventListener("DOMContentLoaded", function () {
    // Size selection and stock update logic
    const sizeOptions = document.querySelectorAll('.size-option');
    const stockCount = document.getElementById('stock-count');
    const addToCartBtn = document.querySelector('.button.button-add-to-cart');
    const selectedSizeInput = document.getElementById('selectedSize');
    const addToCartForm = document.getElementById('addToCartForm');
    
    let selectedSize = null;

    // Initialize size selection handlers
    sizeOptions.forEach(option => {
        option.addEventListener('click', function(e) {
            e.preventDefault();
            
            // Remove active class from all options
            sizeOptions.forEach(opt => opt.classList.remove('active'));
            
            // Add active class to selected option
            this.classList.add('active');
            
            const size = this.getAttribute('data-size');
            const stock = parseInt(this.getAttribute('data-stock'));
            selectedSize = size;
            selectedSizeInput.value = size;
            
            if (stock > 0) {
                stockCount.textContent = stock + ' Items in Stock';
                if (addToCartBtn) {
                    addToCartBtn.disabled = false;
                    addToCartBtn.classList.remove('disabled' );
                }
            } else {
                stockCount.textContent = 'Out of Stock';
                if (addToCartBtn) {
                    addToCartBtn.disabled = true;
                    addToCartBtn.classList.add('disabled');
                }
            }
        });
    });

    // Form submission using SweetAlert2
    addToCartForm.addEventListener('submit', async function(e) {
        e.preventDefault();
        // Check if size is selected
        if (!selectedSize) {
            Swal.fire({
                icon: 'warning',
                title: 'Please Select Size',
                text: 'You must select a size before adding to cart',
                confirmButtonColor: '#3BB77E'
            });
            return;
        }

        const productId = document.getElementById('productId').value;
        const size = selectedSize;

        // Get form data
        const formData = {
            productId : productId,
            selectedSize : size
        }

        console.log(formData)
        
        try {
            const response = await fetch('/cart/add', {
                method: 'POST',
                headers : { "Content-Type" : "application/json" },
                body: JSON.stringify(formData)
            });

            if (response.ok) {
                // Show success message
                Swal.fire({
                    icon: 'success',
                    title: 'Added to Cart!',
                    text: 'Product has been added to your cart successfully',
                    confirmButtonColor: '#3BB77E',
                    showCancelButton: true,
                    cancelButtonText: 'Continue Shopping',
                    confirmButtonText: 'View Cart'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/cart';
                    }
                });
            } else {
                // Show error message
                const data = await response.json();
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: data.message || 'Something went wrong!',
                    confirmButtonColor: '#3BB77E'
                });
            }
        } catch (error) {
            console.error('Error:', error);
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Something went wrong! Please try again later.',
                confirmButtonColor: '#3BB77E'
            });
        }
    });
});
        
    </script>
    

