    }

    .cart-coupon-input {
        flex-grow: 1;
        padding: 0.5rem;
        border: 1px solid #dee2e6;
        border-radius: 4px 0 0 4px;
    }

    .cart-coupon-btn {
        padding: 0.5rem 1rem;
        background-color: #3BB77E;
        color: white;
        border: none;
        border-radius: 0 4px 4px 0;
