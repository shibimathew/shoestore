    @media (max-width: 991px) {
        .cart-table { display: none; }
        .cart-item-cards { display: block; }
    }
    @media (min-width: 992px) {
        .cart-item-cards { display: none; }
    }
    .cart-item-card {
        background: #fff;
        border-radius: 14px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        margin-bottom: 1.25rem;
        padding: 1rem 0.75rem;
        display: flex;
        gap: 1rem;
        align-items: flex-start;
        position: relative;
    }
    .cart-item-card .cart-item-image {
        width: 70px;
        height: 70px;
        border-radius: 10px;
        object-fit: cover;
        box-shadow: 0 2px 8px rgba(0,0,0,0.07);
    }
    .cart-item-card .cart-item-info {
        flex: 1;
        min-width: 0;
    }
    .cart-item-card .cart-item-name {
        font-size: 1.05rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 0.25rem;
    }
    .cart-item-card .cart-item-variant {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 0.25rem;
    }
    .cart-item-card .cart-item-price {
        color: #3BB77E;
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 0.25rem;
    }
    .cart-item-card .cart-item-stock {
        font-size: 0.85rem;
        color: #888;
        margin-bottom: 0.25rem;
    }
    .cart-item-card .cart-item-badges {
        margin-bottom: 0.25rem;
    }
    .cart-item-card .badge {
        font-size: 0.7rem;
        margin-right: 0.25rem;
    }
    .cart-item-card .cart-quantity {
        margin: 0.5rem 0 0.5rem 0;
    }
    .cart-item-card .cart-quantity-btn {
        width: 32px;
        height: 32px;
        font-size: 1.2rem;
        border-radius: 8px;
    }
    .cart-item-card .cart-quantity-input {
        width: 48px;
        height: 32px;
        font-size: 1rem;
        border-radius: 8px;
    }
    .cart-item-card .cart-item-total {
        font-weight: 700;
        color: #222;
        font-size: 1.1rem;
        margin-top: 0.5rem;
    }
    .cart-item-card .cart-item-remove {
        color: #dc3545;
        background: none;
        border: none;
        font-size: 1.3rem;
        position: absolute;
        top: 1rem;
        right: 1rem;
        cursor: pointer;
        transition: color 0.2s;
    }
    .cart-item-card .cart-item-remove:hover {
        color: #a71d2a;
    }
    @media (max-width: 480px) {
        .cart-item-card {
            flex-direction: column;
            align-items: stretch;
            padding: 0.75rem 0.5rem;
        }
        .cart-item-card .cart-item-image {
            width: 54px;
            height: 54px;
            margin-bottom: 0.5rem;
        }
    }
</style>

