                      <% addresses.forEach(addr => { %>
                      <label class="address-card <%= addr.isDefault ? 'selected' : '' %>">
                        <input
                          type="radio"
                          name="selectedAddress"
                          value="<%= addr._id %>"
                          hidden
                          <%= addr.isDefault ? 'checked' : '' %>
                          required
                        />
