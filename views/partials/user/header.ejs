    <style>
        .logo img {
            transition: transform 0.3s ease;
        }
        .logo:hover img {
            transform: scale(1.05);
        }
        .user-profile {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .user-profile .user-name {
            font-weight: 600;
            color: #253D4E;
        }
        .user-profile .user-menu {
            position: relative;
            display: inline-block;
        }
        .user-profile .user-menu .dropdown-menu {
            display: none;
            position: absolute;
            right: 0;
            background: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            border-radius: 4px;
            padding: 8px 0;
            min-width: 150px;
        }
        .user-profile .user-menu:hover .dropdown-menu {
            display: block;
        }
        .user-profile .user-menu .dropdown-menu a {
            display: block;
            padding: 8px 16px;
            color: #253D4E;
            text-decoration: none;
        }
        .user-profile .user-menu .dropdown-menu a:hover {
            background: #f5f5f5;
        }

